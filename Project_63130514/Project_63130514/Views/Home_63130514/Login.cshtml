@model Project_63130514.Models.KhachHang
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLoginAndRegister.cshtml";
}
<head>
    <meta charset="UTF-8">
    <title>Đăng ký</title>
    <style>
        .form-container {
            max-width: 50rem;
            margin: 0 auto;
            border: var(--border);
            padding: 2rem;
            text-align: center;
            margin-top: 2rem;
        }

            .form-container h3 {
                margin-bottom: 1rem;
                font-size: 2.5rem;
                text-transform: uppercase;
                color: var(--black);
            }

            .form-container .box {
                margin: 1rem 0;
                padding: 1.4rem;
                color: var(--black);
                border: var(--border);
                font-size: 1.8rem;
                width: 100%;
            }

            .form-container p {
                margin-top: 1.5rem;
                font-size: 2rem;
                color: var(--light-color);
            }

                .form-container p a {
                    font-size: 2rem;
                    color: var(--red);
                }

                    .form-container p a:hover {
                        color: var(--black);
                    }
    </style>
</head>
@using (Html.BeginForm("Login", "Home_63130514", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="form-container">
        <form action="" method="post">
            <h3>Đăng nhập</h3>
            <input type="text" required maxlength="50" name="taikhoan" placeholder="Tài khoản" class="box">
            <input type="password" required maxlength="20" name="password" placeholder="Mật khẩu" class="box">
            <input type="submit" value="Đăng nhập" class="btn" name="submit">
            <p>Bạn chưa có tài khoản? <a href="~/Home_63130514/Register">Đăng ký ngay</a></p>
            <span>@ViewBag.error</span>
        </form>
    </section>
}
