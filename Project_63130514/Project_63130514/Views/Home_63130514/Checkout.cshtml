@model IEnumerable<Project_63130514.Models.MonAn>

@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="heading">
    <h3>checkout</h3>
    <p><a href="~/Home_63130514/Index">Trang chủ </a> <span> / Thanh toán</span></p>
</div>

<section class="checkout">

    <h1 class="title">Đơn hàng của bạn</h1>

    <form action="" method="post">
        <div class="cart-items">
            <h3>Danh sách sản phẩm</h3>
            <p><span class="name">delicious pizza 01</span><span class="price">$3</span></p>
            <p><span class="name">main dish 02</span><span class="price">$3</span></p>
            <p><span class="name">delicious dessert 01</span><span class="price">$3</span></p>
            <p class="grand-total"><span class="name">grand total :</span> <span class="price">$9</span></p>
            <a href="~/Home_63130514/Cart" class="btn">xem giỏ hàng</a>
        </div>
        <div class="user-info">
            <h3>your info</h3>
            @if (Session["id"] != null)
            {
            <p><i class="fas fa-user"></i> <span>@Session["name"]</span></p>
            <p><i class="fas fa-phone"></i> <span>@Session["sdt"]</span></p>
            <p><i class="fas fa-envelope"></i> <span>@Session["email"]</span></p>
            <p class="address"><i class="fas fa-map-marker-alt"></i> <span>@Session["diachi"]</span></p>
            <a href="@Url.Action("Edit", "KhachHangs_63130514", new { id = Session["id"] })" class="btn">cập nhật thông tin</a>
            <input type="submit" value="Đặt hàng" name="order" class="btn order-btn">
            }
            else
            {
                <h3 style="text-align:center">Vui lòng đăng nhập</h3>
            }
        </div>
    </form>

</section>