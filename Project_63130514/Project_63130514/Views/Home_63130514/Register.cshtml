@model Project_63130514.Models.KhachHang

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutLoginAndRegister.cshtml";
}

<head>
    <meta charset="UTF-8">
    <title>Đăng ký</title>
    <style>
        .form-container {
            max-width: 50rem;
            margin: 0 auto;
            border: var(--border);
            padding: 2rem;
            text-align: center;
            margin-top: 2rem;
        }

            .form-container h3 {
                margin-bottom: 1rem;
                font-size: 2.5rem;
                text-transform: uppercase;
                color: var(--black);
            }

            .form-container .box {
                margin: 1rem 0;
                padding: 1.4rem;
                color: var(--black);
                border: var(--border);
                font-size: 1.8rem;
                width: 100%;
            }

            .form-container p {
                margin-top: 1.5rem;
                font-size: 2rem;
                color: var(--light-color);
            }

                .form-container p a {
                    font-size: 2rem;
                    color: var(--red);
                }

                    .form-container p a:hover {
                        color: var(--black);
                    }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="form-container">
        <form action="" method="post">
            <h3>Đăng ký</h3>
            <input type="text" required maxlength="20" name="TenKhachHang" placeholder="Tên của bạn" class="box">
            <input type="text" required maxlength="20" name="Taikhoan" placeholder="Tài khoản" class="box">
            <input type="password" required maxlength="20" name="Matkhau" placeholder="Mật khẩu" class="box">
            <input type="password" required maxlength="20" name="cpass" placeholder="Nhập lại mật khẩu" class="box">
            <input type="email" required maxlength="255" name="Email" placeholder="Email" class="box">
            <input type="text" required maxlength="10" class="box" name="SoDienThoai" placeholder="Số điện thoại" >
            <input type="text" required maxlength="255" name="DiaChi" placeholder="Địa chỉ" class="box">
            <input type="submit" value="Đăng ký" class="btn" name="submit">
            <p>Bạn đã có tài khoản? <a href="~/Home_63130514/Login">Đăng nhập</a></p>
        </form>
    </section>
}
